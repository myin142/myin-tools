{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@myin/aws-cdk": ["packages/aws-cdk/src/index.ts"],
            "@myin/aws-lambda": ["packages/aws-lambda/src/index.ts"],
            "@myin/cdk-shared": ["packages/cdk-shared/src/index.ts"],
            "@myin/cli": ["packages/cli/src/index.ts"],
            "@myin/nx-builder": ["packages/nx-builder/src/index.ts"],
            "@myin/utils": ["packages/utils/src/index.ts"],
            "@myin/test": ["packages/test/src/index.ts"],
            "@myin/aws-utils": ["packages/aws-utils/src/index.ts"],
            "@myin/shared/tests": ["packages/shared/tests/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
